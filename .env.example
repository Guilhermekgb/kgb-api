# .env.example — copie para .env e ajuste
# Porta do servidor
PORT=3333

# Firebase (opcional)
# FIREBASE_PROJECT_ID=
# FIREBASE_CLIENT_EMAIL=
# FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n
# FIREBASE_STORAGE_BUCKET=

# Se preferir uploads por token em vez de Firebase Auth, defina:
BACKUP_UPLOAD_TOKEN=change-me-to-a-secure-random-string

# Retenção dos backups em dias (padrão 30)
BACKUP_RETENTION_DAYS=30

# Habilite DISABLE_AUTH=1 apenas em desenvolvimento local
# DISABLE_AUTH=1
